---
export interface Props { title: string }
const { title } = Astro.props;
import '../styles/global.css';
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <slot name="nav" />
    <main class="p-4">
      <slot />
    </main>
  </body>
</html>
