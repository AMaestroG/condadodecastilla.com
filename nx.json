{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultProject": "frontend",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "affected": {
    "defaultBase": "main"
  },
  "targetDefaults": {},
  "projects": {
    "frontend": {
      "root": "apps/frontend",
      "targets": {
        "build": {
          "executor": "nx:run-commands",
          "options": {
            "command": "npm run build --prefix apps/frontend"
          }
        },
        "test": {
          "executor": "nx:run-commands",
          "options": {
            "command": "npm run test --prefix apps/frontend"
          }
        }
      }
    },
    "backend": {
      "root": "apps/backend",
      "targets": {
        "build": {
          "executor": "nx:run-commands",
          "options": {
            "command": "echo 'No build step for backend'"
          }
        },
        "test": {
          "executor": "nx:run-commands",
          "options": {
            "command": "vendor/bin/phpunit"
          }
        }
      }
    },
    "devops": {
      "root": "packages/devops"
    },
    "cms": {
      "root": "apps/cms"
    }
  }
}
